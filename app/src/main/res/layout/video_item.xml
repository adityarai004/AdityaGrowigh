<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <VideoView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />

    <com.airbnb.lottie.LottieAnimationView
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/white"
        android:id="@+id/like_video_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="16dp"
        app:lottie_rawRes="@raw/animation_lkc6gvmu"
        app:layout_constraintBottom_toTopOf="@id/comment_video_iv"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:padding="8dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/share_video_iv"
        android:id="@+id/comment_video_iv"
        android:src="@drawable/comment_vec"
        android:background="@drawable/video_button_bg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:id="@+id/share_video_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/share_vec_white"
        android:background="@drawable/video_button_bg"
        app:layout_constraintBottom_toTopOf="@+id/option_video_iv"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:padding="5dp"
        android:id="@+id/option_video_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="92dp"
        android:background="@drawable/video_button_bg"
        android:src="@drawable/baseline_menu_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/follow_video_tv" />

    <ImageView
        android:id="@+id/user_video_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="604dp"
        android:src="@drawable/user"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/username_video_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="604dp"
        android:padding="7dp"
        android:text="Yaman Jain"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/user_video_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/follow_video_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="604dp"
        android:background="@drawable/follow_btn_bg"
        android:padding="7dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="Follow"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/username_video_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:ellipsize="end"
        android:maxLines="2"
        android:id="@+id/video_desc_tv"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:padding="7dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="follow for more these kinds of reels and don't forget to comment hahahahahaha"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/username_video_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>
